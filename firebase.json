{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".venv/**"
    ],
    "rewrites": [
      { "source": "/login", "run": { "serviceId": "educonnect-gouveia", "region": "southamerica-east1" } },
      { "source": "/logout", "run": { "serviceId": "educonnect-gouveia", "region": "southamerica-east1" } },
      { "source": "/aluno", "run": { "serviceId": "educonnect-gouveia", "region": "southamerica-east1" } },
      { "source": "/professor", "run": { "serviceId": "educonnect-gouveia", "region": "southamerica-east1" } },
      { "source": "/professor/**", "run": { "serviceId": "educonnect-gouveia", "region": "southamerica-east1" } }
    ],
    "headers": [
      {
        "source": "**/*.css",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=3600" }
        ]
      }
    ]
  },
  "emulators": {
    "hosting": { "port": 5000 },
    "firestore": { "port": 8080 },
    "ui": { "enabled": true, "port": 4000 }
  }
}
